<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageKullaniciResim"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#006F8C" />

        <TextView
            android:id="@+id/textKullaniciIsim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Kullanıcı İsmi"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageKullaniciDurum"
            app:layout_constraintStart_toEndOf="@+id/imageKullaniciResim"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textKullaniciEposta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="E-posta"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageKullaniciDurum"
            app:layout_constraintStart_toEndOf="@+id/imageKullaniciResim"
            app:layout_constraintTop_toBottomOf="@+id/textKullaniciIsim" />

        <TextView
            android:id="@+id/textKullaniciTelefon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:text="Telefon"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/imageKullaniciDurum"
            app:layout_constraintStart_toEndOf="@+id/imageKullaniciResim"
            app:layout_constraintTop_toBottomOf="@+id/textKullaniciEposta" />

        <ImageView
            android:id="@+id/imageKullaniciDurum"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/presence_online"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>