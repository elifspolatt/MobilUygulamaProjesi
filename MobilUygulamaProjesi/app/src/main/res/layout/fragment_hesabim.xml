<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutHesabim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE9E7"
    tools:context=".HesabimFragment">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:src="@drawable/kahve_cafe_kurumsal_logo_tasarm_2__fotor_bg_remover_2025120516330"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHesabimBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="HESABIM"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butonHesabimBilgiler"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:text="PROFİL BİLGİLERİ"
        android:textSize="16sp"
        app:backgroundTint="#006F8C"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textHesabimBaslik" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butonHesabimDegistir"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="PROFİL BİLGİLERİMİ GÜNCELLE"
        android:textSize="16sp"
        app:backgroundTint="#006F8C"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonHesabimBilgiler" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butonSifremiDegistir"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="ŞİFREMİ DEĞİŞTİR"
        android:textSize="16sp"
        app:backgroundTint="#006F8C"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_lock_idle_lock"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonHesabimDegistir" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butonHesabimPasif"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="ÜYELİĞİ PASİFLEŞTİR"
        android:textColor="#757575"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="textStart"
        app:iconTint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonSifremiDegistir"
        app:strokeColor="#757575" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butonHesabimHesaptanCik"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#D32F2F"
        android:text="HESAPTAN ÇIK"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_lock_power_off"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonHesabimPasif" />
</androidx.constraintlayout.widget.ConstraintLayout>